@model ConcertDB.DAL.Entities.Ticket

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input class="form-control" asp-for="Id" readonly />
            <div class="form-group">
                <label asp-for="EntranceGate" class="control-label"></label>
                <select asp-for="EntranceGate" class="form-control">
                    <option>Norte</option>
                    <option>Sur</option>
                    <option>Oriental</option>
                    <option>Occidental</option>
                </select>
                <span asp-validation-for="EntranceGate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <a class="btn btn-outline-success" asp-controller="Home" asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}